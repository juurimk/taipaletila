/* ===============================================
   Team Section - POISTA neli normaalitilassa
   Mask nkyy VAIN hover:ssa
   KORVAA kaikki aiemmat .mask snnt
=============================================== */

/* PIILOTA MASK TYSIN NORMAALITILASSA */
.member-photo .mask {
    opacity: 0 !important;
    visibility: hidden !important;
    background-color: transparent !important;
    
    /* Silyt alkuperinen positioning */
    position: absolute !important;
    text-align: center !important;
    height: 100% !important;
    width: 100% !important;
    left: 0 !important;
    top: 0 !important;
    
    /* Silyt alkuperinen transform */
    transition: all .5s ease-out 0s !important;
    -webkit-transform: rotateY(180deg) scale(.5,.5) !important;
    transform: rotateY(180deg) scale(.5,.5) !important;
    filter: alpha(opacity=0) !important;
}

/* NYT MASK VAIN HOVER:SSA */
.member-photo:hover .mask {
    opacity: 0.5 !important;
    visibility: visible !important;
    -webkit-transform: rotateY(0deg) scale(1,1) !important;
    transform: rotateY(0deg) scale(1,1) !important;
    filter: alpha(opacity=50) !important;
}

/* SECTIONSET-VRIT VAIN HOVER:SSA */
.team-section.section-lightset .member-photo:hover .mask {
    background-color: var(--siteset-lightset-button) !important;
}

.team-section.section-neutralset .member-photo:hover .mask {
    background-color: var(--siteset-neutralset-button) !important;
}

.team-section.section-darkset .member-photo:hover .mask {
    background-color: var(--siteset-darkset-button) !important;
}

.team-section.section-coloriset .member-photo:hover .mask {
    background-color: var(--siteset-coloriset-button) !important;
}

/* FALLBACK - jos sectionset ei ole mritelty */
.team-section .member-photo:hover .mask {
    background-color: var(--siteset-lightset-button, #1fc41f) !important;
}

/* VARMISTA ETT IKONIT TOIMIVAT OIKEIN */
.member-photo .mask ul.list-inline {
    position: relative !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    margin: 0 !important;
    padding: 0 !important;
}

.member-photo .mask ul.list-inline li a i {
    color: #ffffff !important;
    font-size: 16px !important;
}

