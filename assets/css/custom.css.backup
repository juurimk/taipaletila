/*=================================================================
  Services Section Styles
==================================================================*/

/* Services main section */
.services-section {
  padding: 10px 0;
}

.services-description {
  margin: 10px auto 60px;
  max-width: 600px;
}

.services-description p {
  font-size: 16px;
  line-height: 1.6;
  color: var(--color-text-secondary);
  margin-bottom: 0;
  margin-top: 25px;
}

/* Services grid */
.services-grid {
  margin-top: 40px;
}

/* Service card */
.service-card {
  background: transparent;
  border-radius: 0px;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  transform-style: preserve-3d;
  perspective: 1000px;
  cursor: pointer;
  height: 100%;
}

.service-card-link {
  text-decoration: none;
  color: inherit;
  display: block;
  height: 100%;
}

.service-card-link:hover {
  text-decoration: none;
  color: inherit;
}

.service-card-inner {
  position: relative;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 20px;
  overflow: hidden;
  transition: all 0.4s ease;
  transform: translateZ(0);
  height: auto;
  display: flex;
  flex-direction: column;
  border: 3px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: none;
}

/* Service overlay for content */
.service-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(0, 0, 0, 0.7) 0%,
    rgba(0, 0, 0, 0.4) 50%,
    rgba(0, 0, 0, 0.8) 100%
  );
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 25px;
  border-radius: 17px;
  transition: all 0.4s ease;
}

/* Hover effects */
.service-card:hover {
  transform: translateY(-10px) rotateX(5deg) rotateY(5deg);
}

.service-card:hover .service-card-inner {
  border-color: var(--color-primary);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 30px rgba(var(--color-primary), 0.3);
}

.service-card:hover .service-overlay {
  background: linear-gradient(
    135deg,
    rgba(0, 0, 0, 0.5) 0%,
    rgba(0, 0, 0, 0.2) 50%,
    rgba(0, 0, 0, 0.6) 100%
  );
}

.service-card:hover .service-logo {
  transform: scale(1.1) rotate(5deg);
}


/* Service logo container */
.service-logo-container {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.service-logo {
  width: 50px;
  height: 50px;
  object-fit: contain;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  padding: 8px;
  transition: all 0.4s ease;
  backdrop-filter: none;
  -webkit-backdrop-filter:none;
}

/* Service content */
.service-content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  text-align: left;
}

.service-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--color-text-white);
  margin-bottom: 8px;
  transition: color 0.3s ease;
  line-height: 1.2;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.service-description {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
  margin-bottom: 0;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

/* Single service page styles */
.service-single {
  background-color: var(--color-bg-primary);
  padding: 100px 0;
}

.service-header {
  text-align: center;
}

.service-logo-large {
  display: flex;
  justify-content: center;
}

.service-logo-large img {
  max-width: 120px;
  max-height: 120px;
  object-fit: contain;
  background: rgba(255, 255, 255, 0.95);
  padding: 20px;
  border-radius: 20px;
}

.service-main-title {
  font-size: 3rem;
  color: var(--color-text-white);
  font-weight: 700;
  margin-bottom: 20px;
}

.service-main-description {
  font-size: 1.25rem;
  color: var(--color-text-primary);
  line-height: 1.6;
  margin-bottom: 0;
}

.service-main-image img {
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.service-single-content {
  color: var(--color-text-primary);
}

.service-single-content h1,
.service-single-content h2,
.service-single-content h3,
.service-single-content h4 {
  color: var(--color-text-white);
  margin-top: 2rem;
  margin-bottom: 1rem;
}

.service-single-content h1 {
  font-size: 2.5rem;
  border-bottom: 2px solid var(--color-primary);
  padding-bottom: 0.5rem;
}

.service-single-content h2 {
  font-size: 2rem;
  color: var(--color-primary);
}

.service-single-content h3 {
  font-size: 1.5rem;
  color: var(--color-text-primary);
}

.service-single-content ul,
.service-single-content ol {
  margin-left: 1.5rem;
}

.service-single-content li {
  margin-bottom: 0.5rem;
  color: var(--color-text-secondary);
}

.service-single-content p {
  line-height: 1.7;
  margin-bottom: 1.5rem;
}

/* Service gallery */
.service-gallery .gallery-item {
  overflow: hidden;
  border-radius: 10px;
  transition: transform 0.3s ease;
}

.service-gallery .gallery-item:hover {
  transform: translateY(-5px);
}

.service-gallery .gallery-item img {
  transition: transform 0.3s ease;
}

.service-gallery .gallery-item:hover img {
  transform: scale(1.05);
}

/* Responsive design */
@media (max-width: 1200px) {
  .service-card:hover {
    transform: translateY(-8px) rotateX(3deg) rotateY(3deg);
  }

  .service-card-inner {
    height: auto;
  }
}

@media (max-width: 992px) {
  .services-section {
    padding: 80px 0;
  }

  .service-card:hover {
    transform: translateY(-5px);
  }

  .service-card-inner {
    height: auto;
  }

  .service-single {
    padding: 80px 0;
  }

  .service-main-title {
    font-size: 2.5rem;
  }
}

@media (max-width: 768px) {
  .services-section {
    padding: 60px 0;
  }

  .services-grid {
    margin-top: 30px;
  }

  .service-card-inner {
    height: auto;
  }

  .service-overlay {
    padding: 20px;
  }

  .service-logo {
    width: 45px;
    height: 45px;
    padding: 6px;
  }

  .service-title {
    font-size: 22px;
  }

  .service-description {
    font-size: 13px;
  }

  .service-single {
    padding: 60px 0;
  }

  .service-main-title {
    font-size: 2rem;
  }

  .service-main-description {
    font-size: 1.1rem;
  }

  .service-logo-large img {
    max-width: 100px;
    max-height: 100px;
    padding: 15px;
  }
}

@media (max-width: 576px) {
  .service-card-inner {
    height: 350px;
  }

  .service-overlay {
    padding: 18px;
  }

  .service-logo {
    width: 40px;
    height: 40px;
    padding: 5px;
  }

  .service-title {
    font-size: 20px;
    margin-bottom: 6px;
  }

  .service-description {
    font-size: 12px;
  }

  .service-main-title {
    font-size: 1.8rem;
  }

  .service-main-description {
    font-size: 1rem;
  }
}

/* Animation classes for wow.js */
@keyframes serviceCardFadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 40px, 0);
  }
  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

.wow.fadeInUp {
  animation-name: serviceCardFadeInUp;
}

/* ===============================*/
/* Comparison section styles      */
/* ===============================*/

#comparison {
  background-color: var(--color-bg-secondary);
}

.comparison-table-wrapper {
  background: var(--color-bg-white);
  border-radius: 10px;
  padding: 30px;
  margin-top: 30px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.comparison-table {
  width: 100%;
  margin-bottom: 0;
  background: var(--color-bg-white);
  border-collapse: separate;
  border-spacing: 0;
  border-radius: 8px;
  overflow: hidden;
}

.comparison-table th,
.comparison-table td {
  padding: 15px 12px;
  text-align: center;
  vertical-align: middle;
  border: none;
  position: relative;
}

.comparison-table th {
  background: #2c2f36;
  color: var(--color-text-white);
  font-weight: 600;
  font-size: 14px;
  letter-spacing: 0.5px;
}

.feature-header {
  background: #1d2024 !important;
  text-align: left !important;
  width: 25%;
}

.column-header.highlighted-column {
  background: var(--color-primary) !important;
  color: var(--color-text-white);
  font-weight: 700;
  position: relative;
}

.comparison-table tbody tr {
  transition: all 0.3s ease;
}

.comparison-table tbody tr:hover {
  background: rgba(var(--color-primary), 0.05);
}

.even-row {
  background: #f8f9fa;
}

.odd-row {
  background: var(--color-bg-white);
}

.feature-name {
  text-align: left !important;
  font-weight: 500;
  color: var(--color-text-dark);
  padding-left: 20px !important;
  font-size: 15px;
}

.feature-value {
  font-size: 18px;
  padding: 20px 12px;
  color: var(--color-text-dark);
}

.feature-value.highlighted-column {
  background: rgba(var(--color-primary), 0.1);
  position: relative;
}

.feature-value.highlighted-column::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 3px;
  background: var(--color-primary);
}

.check-icon {
  color: var(--color-primary);
  font-size: 20px;
  font-weight: bold;
}

.close-icon {
  color: var(--color-error);
  font-size: 18px;
  font-weight: bold;
}

.comparison-description {
  margin: 10px auto 20px;
  max-width: 600px;
}

.comparison-description p {
  font-size: 16px;
  line-height: 1.6;
  color: var(--color-text-white);
  margin-bottom: 0;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .comparison-table-wrapper {
    padding: 20px 15px;
    margin-top: 20px;
  }

  .comparison-table th,
  .comparison-table td {
    padding: 12px 8px;
    font-size: 13px;
  }

  .feature-name {
    font-size: 14px;
    padding-left: 15px !important;
  }

  .column-header {
    font-size: 12px;
  }

  .check-icon,
  .close-icon {
    font-size: 16px;
  }
}

@media (max-width: 576px) {
  .comparison-table th,
  .comparison-table td {
    padding: 10px 6px;
    font-size: 12px;
  }

  .feature-name {
    font-size: 13px;
    padding-left: 10px !important;
  }

  .column-header {
    font-size: 11px;
  }

  .check-icon,
  .close-icon {
    font-size: 14px;
  }
}

