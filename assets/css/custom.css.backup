.team-section .member-photo .mask ul.list-inline li a {
    color: #ffffff !important;
    background-color: rgba(255,255,255,0.1) !important;
    border-radius: 50% !important;
    width: 40px !important;
    height: 40px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    transition: all 0.3s ease !important;
}

/* OVERRIDE KAIKKI AIEMMAT SNNT */
.team-section .member-photo .mask,
.team-member .member-photo .mask {
    opacity: 0 !important;
    visibility: hidden !important;
    background-color: transparent !important;
}

/* HOVER OVERRIDE */
.team-section .member-photo:hover .mask,
.team-member .member-photo:hover .mask {
    opacity: 0.5 !important;
    visibility: visible !important;
}

/* RESPONSIIVITOIVUUS */
@media (max-width: 768px) {
    .member-photo .mask {
        opacity: 0 !important;
        visibility: hidden !important;
    }
    
