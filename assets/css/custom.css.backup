/* FAQ Section Styles            */
/* ===============================*/

.faq-section {
  background-color: var(--color-bg-primary);
  padding: 100px 0;
}

/* FAQ Title and Description */
.faq-subtitle {
  color: var(--color-primary);
  font-size: 1.5rem;
  font-weight: 500;
  margin-bottom: 20px;
  margin-top: 15px;
}

.faq-description {
  margin: 10px auto 40px;
  max-width: 700px;
}

.faq-description p {
  font-size: 16px;
  line-height: 1.6;
  color: var(--color-text-primary);
  margin-bottom: 0;
}

/* FAQ Category Filter */
.faq-categories {
  margin-bottom: 50px;
  padding: 20px 0;
}

.faq-filter-btn {
  background: transparent;
  border: 2px solid rgba(255, 255, 255, 0.2);
  color: var(--color-text-primary);
  padding: 12px 25px;
  margin: 5px 10px;
  border-radius: 0px;
  font-size: 14px;
  font-weight: 500;
  text-transform: none;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
  cursor: pointer;
  outline: none;
}

.faq-filter-btn:hover {
  background: rgba(var(--color-primary), 0.1);
  border-color: var(--color-primary);
  color: var(--color-primary);
  transform: translateY(-2px);
}

.faq-filter-btn.active {
  background: var(--color-primary);
  border-color: var(--color-primary);
  color: var(--color-text-white);
  box-shadow: 0 5px 15px rgba(var(--color-primary), 0.3);
}

/* FAQ Accordion */
.faq-accordion {
  margin-bottom: 60px;
}

.faq-item {
  margin-bottom: 15px;
  transition: all 0.3s ease;
}

.faq-item .card {
  background: var(--color-border-light);
  border: 1px solid var(--color-border-medium);
  border-radius: 10px;
  transition: all 0.3s ease;
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
}

.faq-item .card:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(var(--color-primary), 0.3);
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.faq-item .card-header {
  background: transparent;
  border-bottom: none;
  padding: 0;
  border-radius: 10px 10px 0 0;
}

.faq-question {
  background: transparent;
  border: none;
  width: 100%;
  text-align: left;
  padding: 25px 30px;
  font-size: 16px;
  font-weight: 600;
  color: var(--color-text-white);
  cursor: pointer;
  outline: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
  border-radius: 10px;
}

.faq-question:hover {
  color: var(--color-primary);
}

.faq-question:focus {
  outline: none;
  box-shadow: none;
}

.faq-question-text {
  flex-grow: 1;
  line-height: 1.4;
  margin-right: 15px;
}

.faq-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 35px;
  height: 35px;
  background: rgba(var(--color-primary), 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.faq-icon i {
  font-size: 18px;
  color: var(--color-primary);
  transition: all 0.3s ease;
}

.faq-question:hover .faq-icon {
  background: var(--color-primary);
  transform: rotate(90deg);
}

.faq-question:hover .faq-icon i {
  color: var(--color-text-white);
}

/* When accordion is expanded */
.faq-question[aria-expanded="true"] .faq-icon {
  background: var(--color-primary);
  transform: rotate(180deg);
}

.faq-question[aria-expanded="true"] .faq-icon i {
  color: var(--color-text-white);
}

.faq-item .card-body {
  padding: 0 30px 30px 30px;
  background: transparent;
}

.faq-answer {
  padding-top: 10px;
  border-top: 1px solid var(--color-border-medium);
}

.faq-answer p {
  color: var(--color-text-primary);
  line-height: 1.7;
  font-size: 15px;
  margin-bottom: 0;
}

/* FAQ Contact CTA */
.faq-contact-cta {
  background: rgba(var(--color-primary), 0.1);
  border-radius: 15px;
  padding: 40px 30px;
  border: 1px solid rgba(var(--color-primary), 0.2);
